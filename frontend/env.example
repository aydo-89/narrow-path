# The Narrow Path - Frontend Environment Variables
# Copy this file to .env.local for development

# =============================================================================
# API Configuration
# =============================================================================
# Backend API base URL
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_WS_URL=ws://localhost:3001

# For mobile/PWA - production URLs
REACT_APP_API_URL_PROD=https://api.narrowpath.ai
REACT_APP_WS_URL_PROD=wss://api.narrowpath.ai

# =============================================================================
# Mobile & PWA Configuration  
# =============================================================================
# Enable Progressive Web App features
REACT_APP_PWA_ENABLED=true

# Mobile-specific API endpoints
REACT_APP_MOBILE_API_VERSION=v1
REACT_APP_OFFLINE_SCENARIOS=true

# Touch/gesture sensitivity for mobile
REACT_APP_MOBILE_TOUCH_SENSITIVITY=1.0
REACT_APP_MOBILE_HAPTIC_FEEDBACK=true

# =============================================================================
# Game Configuration
# =============================================================================
# Default game values (mobile-optimized)
REACT_APP_DEFAULT_P_DOOM=15
REACT_APP_DEFAULT_DYSTOPIA_LEVEL=20
REACT_APP_DEFAULT_PATH_POSITION=-5

# Mobile performance settings
REACT_APP_MOBILE_REDUCED_ANIMATIONS=false
REACT_APP_MOBILE_LOW_POWER_MODE=false
REACT_APP_3D_QUALITY_MOBILE=medium

# =============================================================================
# Feature Flags
# =============================================================================
# Development features
REACT_APP_DEBUG_MODE=false
REACT_APP_SHOW_PERFORMANCE_MONITOR=false

# Game features
REACT_APP_ENABLE_MULTIPLAYER=false
REACT_APP_ENABLE_AI_MIRROR=false
REACT_APP_ENABLE_SOCIAL_SHARING=true

# Mobile-specific features
REACT_APP_ENABLE_PUSH_NOTIFICATIONS=true
REACT_APP_ENABLE_BIOMETRIC_AUTH=false
REACT_APP_ENABLE_DEVICE_ORIENTATION=true

# =============================================================================
# Analytics & Monitoring
# =============================================================================
# Analytics (mobile-friendly)
REACT_APP_ANALYTICS_ID=
REACT_APP_MIXPANEL_TOKEN=
REACT_APP_AMPLITUDE_API_KEY=

# Error tracking
REACT_APP_SENTRY_DSN=
REACT_APP_BUGSNAG_API_KEY=

# Performance monitoring for mobile
REACT_APP_PERFORMANCE_MONITORING=true
REACT_APP_MOBILE_CRASH_REPORTING=true

# =============================================================================
# Social & Sharing
# =============================================================================
# Social media integration (mobile sharing)
REACT_APP_TWITTER_HANDLE=@narrowpathai
REACT_APP_SHARE_URL_BASE=https://narrowpath.ai/share

# Open Graph metadata for mobile sharing
REACT_APP_OG_TITLE="The Narrow Path - AI Risk Game"
REACT_APP_OG_DESCRIPTION="Navigate between AI chaos and dystopia in this educational simulation"
REACT_APP_OG_IMAGE=https://narrowpath.ai/og-image.png

# =============================================================================
# Security
# =============================================================================
# Content Security Policy for mobile
REACT_APP_CSP_ENABLED=true
REACT_APP_ALLOWED_HOSTS=localhost,narrowpath.ai,*.narrowpath.ai

# Mobile app security
REACT_APP_CERTIFICATE_PINNING=false
REACT_APP_ROOT_DETECTION=false

# =============================================================================
# Development & Testing
# =============================================================================
# Development tools
REACT_APP_STORYBOOK_ENABLED=false
REACT_APP_CYPRESS_TESTING=false

# Mobile testing
REACT_APP_MOBILE_SIMULATOR=false
REACT_APP_DEVICE_TESTING=false

# =============================================================================
# Build Configuration
# =============================================================================
# Build optimization for mobile
GENERATE_SOURCEMAP=false
REACT_APP_BUILD_TARGET=web
REACT_APP_BUNDLE_ANALYZER=false

# Mobile build settings
REACT_APP_MOBILE_MANIFEST_URL=/manifest.json
REACT_APP_SERVICE_WORKER_URL=/service-worker.js 